# Azure SQL Database Configuration
AZURE_SQL_SERVER=your-sql-server.database.windows.net
AZURE_SQL_DATABASE=your-database-name
AZURE_SQL_USER=your-username
AZURE_SQL_PASSWORD=your-password
AZURE_SQL_PORT=1433

# Azure Blob Storage Configuration
AZURE_STORAGE_ACCOUNT_NAME=yourstorageaccount
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
AZURE_STORAGE_CONTAINER=photos
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=your-key;EndpointSuffix=core.windows.net

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Azure Functions Configuration
AZURE_FUNCTIONS_URL=https://your-function-app.azurewebsites.net
FUNCTIONS_WORKER_RUNTIME=node
NODE_ENV=development

# Application Configuration
APP_SECRET=your-secret-key-for-session-management
APP_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
